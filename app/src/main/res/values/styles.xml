<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextAppearanceActive">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceInactive">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShapeAppearanceImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearanceImageMission" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="CommonDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearance">@style/ShapeAppearanceDialog</item>
    </style>

    <style name="ShapeAppearanceDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_left</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
